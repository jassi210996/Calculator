<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv1"
        android:textAlignment="textEnd"
        android:paddingTop="18dp"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:textSize="60dp"
        android:text="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/tv2"
        android:textSize="50dp"
        android:paddingTop="18dp"
        android:textAlignment="textEnd"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_below="@id/tv1"
        />

    <Button
        android:id="@+id/b7"
        android:layout_width="98dp"
        android:layout_height="85dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv2"
        android:background="#696969"
        android:text="7"
        android:textSize="35dp" />

    <Button

        android:id="@+id/b8"
        android:layout_width="98dp"
        android:layout_height="85dp"
        android:layout_below="@+id/tv2"
        android:layout_toRightOf="@id/b7"
        android:background="#696969"
        android:text="8"
        android:textSize="35dp" />

    <Button
        android:id="@+id/b9"
        android:layout_width="98dp"
        android:layout_height="85dp"
        android:layout_below="@+id/tv2"
        android:layout_toRightOf="@id/b8"
        android:background="#696969"
        android:text="9"
        android:textSize="35dp" />

    <Button
        android:id="@+id/del"
        android:layout_width="90dp"
        android:layout_height="68dp"
        android:layout_below="@+id/tv2"
        android:layout_toRightOf="@id/b9"
        android:background="#FF8C00"
        android:text="Del"
        android:textSize="20dp" />

    <Button
        android:id="@+id/b4"
        android:layout_width="98dp"
        android:layout_height="85dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/b9"
        android:background="#696969"
        android:text="4"
        android:textSize="35dp" />

    <Button

        android:id="@+id/b5"
        android:layout_width="98dp"
        android:layout_height="85dp"
        android:layout_below="@+id/b8"
        android:layout_toRightOf="@id/b4"
        android:background="#696969"
        android:text="5"
        android:textSize="35dp" />

    <Button
        android:id="@+id/b6"
        android:layout_width="98dp"
        android:layout_height="85dp"
        android:layout_below="@+id/b7"
        android:layout_toRightOf="@id/b5"
        android:background="#696969"
        android:text="6"
        android:textSize="35dp" />

    <Button
        android:id="@+id/dvd"
        android:layout_width="90dp"
        android:layout_height="68dp"
        android:layout_below="@+id/del"
        android:layout_toRightOf="@id/b6"
        android:background="#808080"
        android:text="/"
        android:textSize="20dp" />

    <Button
        android:id="@+id/b1"
        android:layout_width="98dp"
        android:layout_height="85dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/b4"
        android:background="#696969"
        android:text="1"
        android:textSize="35dp" />

    <Button

        android:id="@+id/b2"
        android:layout_width="98dp"
        android:layout_height="85dp"
        android:layout_below="@+id/b5"
        android:layout_toRightOf="@id/b1"
        android:background="#696969"
        android:text="2"
        android:textSize="35dp" />

    <Button
        android:id="@+id/b3"
        android:layout_width="98dp"
        android:layout_height="85dp"
        android:layout_below="@+id/b6"
        android:layout_toRightOf="@id/b2"
        android:background="#696969"
        android:text="3"
        android:textSize="35dp" />

    <Button
        android:id="@+id/multi"
        android:layout_width="90dp"
        android:layout_height="68dp"
        android:layout_below="@+id/dvd"
        android:layout_toRightOf="@id/b9"
        android:background="#808080"
        android:text="*"
        android:textSize="20dp" />

    <Button
        android:id="@+id/dec"
        android:layout_width="98dp"
        android:layout_height="95dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/b1"
        android:background="#696969"
        android:text="."
        android:textSize="35dp" />

    <Button

        android:id="@+id/zero"
        android:layout_width="98dp"
        android:layout_height="95dp"
        android:layout_below="@+id/b2"
        android:layout_toRightOf="@id/dec"
        android:background="#696969"
        android:text="0"
        android:textSize="35dp" />

    <Button
        android:id="@+id/equal"
        android:layout_width="98dp"
        android:layout_height="95dp"
        android:layout_below="@+id/b3"
        android:layout_toRightOf="@id/zero"
        android:background="#696969"
        android:text="="
        android:textSize="35dp" />

    <Button
        android:id="@+id/sub"
        android:layout_width="90dp"
        android:layout_height="68dp"
        android:layout_below="@+id/multi"
        android:layout_toRightOf="@id/equal"
        android:background="#808080"
        android:text="-"
        android:textSize="20dp" />

    <Button
        android:id="@+id/plus"
        android:layout_width="90dp"
        android:layout_height="78dp"
        android:layout_below="@+id/sub"
        android:layout_toRightOf="@id/equal"
        android:background="#808080"
        android:text="+"
        android:textSize="20dp" />
</RelativeLayout>